<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Título de configuración de cuenta -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuración de cuenta"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <!-- Letra circular -->
        <TextView
            android:id="@+id/txtLetraPerfil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:textSize="36sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/txtNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Usuario"
            android:textColor="#666666"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Correo -->
        <TextView
            android:id="@+id/txtCorreoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="correo@ejemplo.com"
            android:textColor="#666666"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Número de teléfono -->
        <TextView
            android:id="@+id/txtTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número de teléfono"
            android:textColor="#666666"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="24dp" />

        <!-- Sección cambio de contraseña -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar contraseña"
            android:textSize="20sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etContrasenaActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#000000"
            android:hint="Contraseña actual"
            android:inputType="textPassword"
            android:textColor="#1B1B1B"
            android:textColorHint="#666666" />

        <EditText
            android:id="@+id/etNuevaContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#000000"
            android:hint="Nueva contraseña"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#666666" />

        <Button
            android:id="@+id/btnActualizarContrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizar contraseña"
            android:layout_marginBottom="126dp"/>

        <!-- Botón cerrar sesión -->
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión" />


    </LinearLayout>

</ScrollView>
